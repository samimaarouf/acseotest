{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
{% endblock %}

{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Email</th>
				<th scope="col">Nom</th>
				<th scope="col">Demande</th>
				<th scope="col">Trait√©e</th>
				<th scope="col"></th>
			</tr>
		</thead>
		{% for user in users %}
			{% for question in user.questions %}
				<tbody>
					<tr>
						<td>{{ user.email }}</td>
						<td>{{ user.name }}</td>
						<td>{{ question.content }}</td>
						{% if question.marked %}
							<td>
								Oui
							</td>
							<td>
								<input type="checkbox" class="form-check-input" type="checkbox" value="" />
							</td>
						{% else %}
							<td>
								Non
							</td>
							<td>
								<input type="checkbox" id="flexCheckDisabled" class="form-check-input" type="checkbox" value={{question.id}} />
							</td>
						{% endif %}
					</tr>
				</tbody>
			{% endfor %}
		{% endfor %}
	</table>
	<button type="button" class="btn btn-primary float-end m-3" id="sendData" onClick="sendData()">Envoyer</button>
{% endblock %}

{% block javascript %}
	<script>
		function sendData(){
			var selected = [];
			$('input[type=checkbox]').each(function () {
				if ($(this).is(":checked")) {
					var fdp = $(this).val();
					selected.push($(this).val());
				}
			});

			if(selected.length > 0){
				$.ajax({
        		type:"POST",
        		url:"{{ path("setQuestionsMarked") }}",
       			data: {'markedQuestions' : selected},  
				success: function() {   
        			location.reload();  
    			}
      			});
				
			}
    	}
	</script>
{% endblock %}